# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-in-production

# Basic Auth Credentials
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# MySQL Database Configuration
# Format: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://campaign_user:your_password@localhost:3306/campaigns_db
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=campaign_user
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=campaigns_db

# Adobe Firefly API
ADOBE_CLIENT_ID=your-adobe-client-id
ADOBE_CLIENT_SECRET=your-adobe-client-secret
ADOBE_API_KEY=your-adobe-api-key

# Dropbox API (for uploading processed campaign images)
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token
DROPBOX_FOLDER_PATH=/campaign-images

# Storage Configuration
STORAGE_PATH=./storage
UPLOAD_PATH=./storage/uploads
GENERATED_PATH=./storage/generated

# Content Validation
PROHIBITED_WORDS_STR=spam,scam,fake,fraud,illegal,drugs,weapons,violence,hate,explicit,adult,casino,gambling,phishing
ENABLE_CONTENT_VALIDATION=true

# Brand Validation
# Comma-separated list of brand colors in hex format (e.g., #FF5733,#3498DB)
BRAND_COLORS_STR=#FF5733,#3498DB,#2ECC71,#F39C12,#9B59B6
ENABLE_BRAND_VALIDATION=true
BRAND_COLOR_TOLERANCE=30
BRAND_COMPLIANCE_THRESHOLD=50.0

